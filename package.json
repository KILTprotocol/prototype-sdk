{
  "name": "@kiltprotocol/sdk-js",
  "version": "0.17.1",
  "description": "",
  "main": "./build/index.js",
  "typings": "./build/index.d.ts",
  "scripts": {
    "test": "jest --coverage --group=-integration",
    "test:ci": "jest --ci --coverage --group=-integration",
    "test:integration:run": "jest -b --runInBand --group=integration",
    "test:integration": "if lsof -i :9944 > /dev/null; then yarn test:integration:run; else echo 'Can not connect to chain. Is it running?'; exit 1;fi",
    "test:watch": "yarn test --watch",
    "lint": "eslint 'src/**'",
    "lint:fix": "yarn lint --fix",
    "style": "prettier -l src/**/*.ts",
    "style:fix": "yarn style --write",
    "build": "tsc --declaration",
    "build:docs": "typedoc --theme default --out docs/api && touch docs/.nojekyll",
    "buildAndPublish": "yarn build && npm publish --access public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn style",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KILTprotocol/sdk-js.git"
  },
  "engines": {
    "node": ">=10.0"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://registry.npmjs.org"
  },
  "author": "",
  "license": "BSD-4-Clause",
  "bugs": {
    "url": "https://github.com/KILTprotocol/sdk-js/issues"
  },
  "homepage": "https://github.com/KILTprotocol/sdk-js#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.0.0",
    "@types/uuid": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^22.1.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-tsc": "^1.2.0",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "jest-runner-groups": "^1.1.1",
    "npm-registry-client": "^8.6.0",
    "prettier": "^2.0.2",
    "ts-jest": "^25.3.0",
    "tslib": "^1.10.0",
    "typedoc": "^0.17.3",
    "typedoc-plugin-external-module-name": "^3.0.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@polkadot/api": "^1.8.1",
    "@polkadot/keyring": "^2.7.1",
    "@polkadot/types": "^1.8.1",
    "@polkadot/util": "^2.7.1",
    "@polkadot/util-crypto": "^2.7.1",
    "@types/jsonabc": "^2.3.1",
    "ajv": "^6.6.1",
    "bn.js": "^5.1.1",
    "jsonabc": "^2.3.1",
    "typescript-logging": "^0.6.3",
    "uuid": "^7.0.3"
  },
  "peerDependencies": {
    "tweetnacl": "^1.0.0"
  }
}
