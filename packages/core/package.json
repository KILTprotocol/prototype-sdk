    "@polkadot/types-known": "^2.0.1",
    "@polkadot/util": "^3.5.1",
    "@polkadot/util-crypto": "^3.5.1",
    "ajv": "^6.12.5",
    "bn.js": "^5.1.3",
    "tweetnacl": "^1.0.3",
    "typescript-logging": "^0.6.4",
    "uuid": "^8.1.0"
  }
