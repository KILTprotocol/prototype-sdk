{
  "name": "@kiltprotocol/core",
  "version": "0.19.1-12",
  "description": "",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --coverage --group=-integration",
    "test:ci": "jest --ci --coverage --group=-integration",
    "test:integration:run": "jest --group=integration -b -w 3 --silent",
    "test:integration": "{ lsof -i :9944 > /dev/null && yarn test:integration:run; } || echo 'Can not connect to chain. Is it running?'; exit 1;",
    "test:watch": "yarn test --watch",
    "clean": "rimraf ./lib",
    "build": "yarn clean && yarn build:ts",
    "build:ts": "tsc --declaration -p tsconfig.build.json",
    "build:docs": "typedoc --theme default --out docs/api && touch docs/.nojekyll"
  },
  "repository": "github:kiltprotocol/sdk-js",
  "engines": {
    "node": ">=10.0"
  },
