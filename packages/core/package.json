  "homepage": "https://github.com/KILTprotocol/sdk-js#readme",
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "@types/uuid": "^8.0.0",
    "jest": "^26.2.0",
    "jest-docblock": "^26.0.0",
    "jest-runner": "^26.2.0",
    "jest-runner-groups": "^2.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "tslib": "^2.0.0",
    "typedoc": "^0.17.8",
    "typedoc-plugin-external-module-name": "3.1.0",
    "typescript": "^3.9.7"
  },
