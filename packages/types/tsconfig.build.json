{
  "extends": "../../tsconfig.build.json",

  "compilerOptions": {
    "outDir": "./lib",
    "paths": {
    "@kiltprotocol/types": ["src"],
    "@kiltprotocol/types/*": ["src/*"],
    //"@polkadot/api/augment": ["src/chainTypes/augment-api.ts"],
    //"@polkadot/types/augment": ["src/chainTypes/augment-types.ts"]
    },
    "baseUrl": "."
  },

  "include": [
    "src/**/*.ts", "src/**/*.js"
  ],

  "exclude": [
    "coverage",
    "**/*.spec.ts",
    "src/**/definitions.ts",
  ]
}
