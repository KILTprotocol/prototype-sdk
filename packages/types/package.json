{
  "name": "@kiltprotocol/types",
  "version": "0.19.1-25",
  "description": "",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "yarn clean && yarn generate:defs && yarn generate:meta && yarn build:ts",
    "generate:defs": "ts-node --skip-project ../../node_modules/.bin/polkadot-types-from-defs --package @kiltprotocol/types/chainTypes --input ./src/chainTypes",
    "generate:meta": "ts-node --skip-project ../../node_modules/.bin/polkadot-types-from-chain --package @kiltprotocol/types/chainTypes --endpoint ./metadata.json --output ./src/chainTypes",
    "build:ts": "tsc --declaration -p tsconfig.build.json",
    "build:docs": "typedoc --theme  --out docs/api && touch docs/.nojekyll"
  },
  "repository": "github:kiltprotocol/sdk-js",
  "engines": {
    "node": ">=10.0"
  },
  "author": "",
  "license": "BSD-4-Clause",
  "bugs": "https://github.com/KILTprotocol/sdk-js/issues",
  "homepage": "https://github.com/KILTprotocol/sdk-js#readme",
  "devDependencies": {
    "@polkadot/typegen": "^3.7.3",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
