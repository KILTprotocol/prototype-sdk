{
  "extends": "./tsconfig.build.json",
  "exclude": [
    "docs/**/*"
  ],
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@kiltprotocol/sdk-js": ["sdk-js/src"],
      "@kiltprotocol/core": ["core/src"],
      "@kiltprotocol/types/*": ["types/src/*"],
      "@polkadot/api/augment": ["types/src/interfaces/augment-api.ts"],
      "@polkadot/types/augment": ["types/src/interfaces/augment-types.ts"]
    }
  },
  "skipLibCheck": true
}
